<% include partials/header.ejs %>

<h1><%= title %></h1>
<a href="/games/add">Add a Game</a>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Publisher</th>
    <th>Genre</th>
    <th>Year</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% for (var i=0; i < games.length; i++) { %>
    <tr>
      <td><%= games[i].title %></td>
      <td><%= games[i].publisher %></td>
      <td><%= games[i].genre %></td>
      <td><%= games[i].year %></td>
      <td><a href="/games/<%= games[i]._id %>">Edit</a></td>
      <td><a href="/games/delete/<%= games[i]._id %>" class="confirmation">Delete</a></td>
  </tr>
  <% } %>
</table>
<% include partials/footer.ejs %>